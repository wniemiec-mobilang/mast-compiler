<mobilang>
    <screens>
        <screen>
            <title>Homepage</title>
            <body>
                <content>
                    <text>hello</text>
                    <text>world</text>
                    <button>
                        <text>My Calendar</text>
                        <actions>
                            <onpress>
                                <goto>Calendar</goto>
                            </onpress>
                        </actions>
                    </button>
                </content>
                <style>
                    text { background-color: 'red'; flex: 1; }
                    div { background-color: 'green'; flex: 1; }
                </style>
            </body>
            <subscreens>
                <subscreen>
                    <title>Calendar</title>
                    <body>
                        <content>
                            <text>some month</text>
                            <text>some day</text>
                        </content>
                    </body>
                </subscreen>
                <subscreen>
                    <title>Q&A</title>
                    <body>
                        <content>
                            <text>question</text>
                            <text>answer</text>
                        </content>
                    </body>
                </subscreen>
            </subscreens>
        </screen>
        <screen>
            <title>Config</title>
            <body>
                <content>
                    <text>config</text>
                </content>
            </body>
        </screen>
    </screens>
    <icon>https://upload.wikimedia.org/wikipedia/commons/thumb/a/a5/Google_Chrome_icon_%28September_2014%29.svg/512px-Google_Chrome_icon_%28September_2014%29.svg.png</icon>
